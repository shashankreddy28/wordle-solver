{
    "manifest_version": 3,
    "name": "Wordle Solver Assistant",
    "version": "1.0",
    "description": "Suggests the best next guess in Wordle.",
    "permissions": ["scripting", "activeTab", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    }
  }