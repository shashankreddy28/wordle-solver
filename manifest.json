{
    "manifest_version": 3,
    "name": "Wordle Solver Assistant",
    "version": "1.0",
    "description": "Suggests the best next guess in Wordle.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.nytimes.com/games/wordle/*",
          "*://*/*wordle*"
        ],
        "js": ["content.js"]
      }
    ]
  }
  